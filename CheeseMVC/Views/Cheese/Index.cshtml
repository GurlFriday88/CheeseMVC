<table class="table table-dark">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th scope="col">Description</th>

        </tr>
    </thead>
    <tbody>
        <tr>

            @foreach (KeyValuePair<string, string> cheese in ViewBag.cheeses)
            {
                <td>@string.Format(" {0} ", cheese.Key, cheese.Value)</td>
                <td>@string.Format(" {1} ", cheese.Key, cheese.Value)</td>
            }

        </tr>

    </tbody>
</table>
<br />
<hr />

@if (ViewBag.cheeses.Count == 0)
{

    <p>No cheeses yet!</p>
}
else
{
    <p>Tired of a cheese ? <a asp-controller="Cheese" asp-action="Delete"> Delete it</a></p>
}



